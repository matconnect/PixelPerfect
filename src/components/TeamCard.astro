---
// Props: name, role, image (URL), description
const { name, role, image, description } = Astro.props;
---

<div
  class="bg-[color:var(--muted)] rounded-2xl shadow-md overflow-hidden transition hover:shadow-xl text-left"
>
  <div class="flex flex-col items-center p-6">
    <img
      src={image}
      alt={name}
      width="128"
      height="128"
      class="rounded-full object-cover border-4 border-[color:var(--accent)] shadow-sm mb-4"
      loading="lazy"
    />
    <div class="text-center">
      <h3 class="text-lg font-bold text-[color:var(--foreground)]">{name}</h3>
      <p class="text-sm text-[color:var(--muted-foreground)]">{role}</p>
      {
        description && (
          <p class="mt-3 text-sm text-[color:var(--muted-foreground)] leading-relaxed">
            {description}
          </p>
        )
      }
    </div>
  </div>
</div>
