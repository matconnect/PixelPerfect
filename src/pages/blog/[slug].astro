---
import { getCollection, type CollectionEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const articles = await getCollection("blog");

  return await Promise.all(
    articles.map(async (article, index) => {
      const { Content } = await article.render();
      const previous = articles[index - 1] || null;
      const next = articles[index + 1] || null;

      return {
        params: { slug: article.slug },
        props: {
          article,
          Content,
          previous,
          next,
        },
      };
    })
  );
}

interface Props {
  article: CollectionEntry<"blog">;
  Content: Awaited<ReturnType<CollectionEntry<"blog">["render"]>>["Content"];
  previous: CollectionEntry<"blog"> | null;
  next: CollectionEntry<"blog"> | null;
}

const { article, Content, previous, next } = Astro.props;
const { title, date, image, description, author, readingTime, tags } =
  article.data;

const formattedDate = new Date(date).toLocaleDateString("fr-FR", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
